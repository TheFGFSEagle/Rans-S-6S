    <!-- Planches de bord -->
    <model>
        <path>Panel/panel.xml</path>
        <offsets>
            <x-m> -1.6648 </x-m>
            <y-m>  0.000 </y-m>
            <z-m> 0.01388 </z-m>
            <roll-deg>    0 </roll-deg>
            <pitch-deg>   0 </pitch-deg>
            <heading-deg> 0 </heading-deg>
        </offsets>
    </model>

    <!-- joysticks  -->
    <animation>
        <type>rotate</type>
        <object-name>StickLeft</object-name>
        <property>controls/flight/elevator</property>
        <factor>-8</factor>
        <center>
            <x-m>-1.4816</x-m>
            <y-m>-0.2331</y-m>
            <z-m>-0.4226</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>StickLeft</object-name>
        <property>controls/flight/aileron</property>
        <factor>-8</factor>
        <center>
            <x-m>-1.4816</x-m>
            <y-m>-0.2331</y-m>
            <z-m>-0.4226</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>StickRight</object-name>
        <property>controls/flight/elevator</property>
        <factor>-8</factor>
        <center>
            <x-m>-1.4816</x-m>
            <y-m> 0.2331</y-m>
            <z-m>-0.4226</z-m>
        </center>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>StickRight</object-name>
        <property>controls/flight/aileron</property>
        <factor>-8</factor>
        <center>
            <x-m>-1.4816</x-m>
            <y-m> 0.2331</y-m>
            <z-m>-0.4226</z-m>
        </center>
        <axis>
            <x>1.0</x>
            <y>0.0</y>
            <z>0.0</z>
        </axis>
    </animation>

